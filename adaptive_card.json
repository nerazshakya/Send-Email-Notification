{
    "type": "message",
    "attachments": [{
        "contentType": "application/vnd.microsoft.card.adaptive",
        "content": {
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "type": "AdaptiveCard",
            "version": "1.6",
            "body": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "medium",
                            "weight": "bolder",
                            "text": "{TITLE}",
                            "spacing": "none"
                        },
                        {
                            "type": "TextBlock",
                            "size": "small",
                            "weight": "bolder",
                            "text": "RUN ID #{RUN_ID} (Commit {COMMIT})",
                            "spacing": "none"
                        },
                        {
                            "type": "TextBlock",
                            "size": "small",
                            "weight": "bolder",
                            "text": "By @{ACTOR} on {CURRENT_TIME}",
                            "spacing": "none"
                        },
                        {
                            "type": "FactSet",
                            "separator": true,
                            "spacing": "Padding",
                            "facts": [
                                {"title": "Environment", "value": "{ENVIRON}"},
                                {"title": "Application", "value": "{APP}"},
                                {"title": "Stage", "value": "{STAGE}"},
                                {"title": "Event Type", "value": "{EVENT}"},
                                {"title": "Branch", "value": "{BRANCH}"},
                                {"title": "Status", "value": "{STATUS}"},
                                {"title": "Commit Message", "value": "{COMMIT_MESSAGE}"}
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {"type": "Action.OpenUrl", "title": "Repository", "style": "positive", "url": "{REPO_URL}"},
                                {"type": "Action.OpenUrl", "title": "Workflow Status", "style": "positive", "url": "{BUILD_URL}"},
                                {"type": "Action.OpenUrl", "title": "Review Diffs", "style": "positive", "url": "{COMMIT_URL}"}
                            ]
                        }
                    ]
                }
            ]
        }
    }]
}
